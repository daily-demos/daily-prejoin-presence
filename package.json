{
  "name": "daily-demo-boilerplate",
  "version": "1.0.0",
  "description": "A boilerplate template repository for Daily demos",
  "main": "index.js",
  "scripts": {
    "start": "http-server ./src/ -c-1",
    "check": "eslint src/",
    "fix": "eslint src/ --fix",
    "dev": "npm run build && sh ./dev.sh",
    "update": "npm outdated | awk 'NR>1 {print $1\"@\"$4}' | xargs npm install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/daily-demos/boilerplate.git"
  },
  "author": "",
  "license": "BSD-2-Clause",
  "bugs": {
    "url": "https://github.com/daily-demos/boilerplate/issues"
  },
  "homepage": "https://github.com/daily-demos/boilerplate#readme",
  "devDependencies": {
    "eslint": "^8.17.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^5.0.0",
    "http-server": "^14.1.1",
    "jest": "^29.6.1"
  }
}
